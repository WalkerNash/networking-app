<div class="ui segment">
 <% @messages.each do |m| %>
  <% if m.body %>
   <% user = User.find(m.user_id) %>
   <div class="item">
    <div class="content">
     <div class="header">
       <strong>
         <%= user.given_name %>
       </strong>

          </div>
      <div class="list">
       <div class="item">
        <i class="right triangle icon"></i>
         <%= m.body %>
      </div>
    </div>
   </div>
 </div>
 <% end %>
<% end %>
</div>




<%= form_for ([@relationship, @conversation, @message]) do |f| %>
<%= f.text_area :body %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :conversation_id, value: @conversation.id %>
<%= content_tag :div, class: 'yes-btn' do -%>
<%= f.submit 'Accept', class: 'btn btn-primary' %>
<% end -%>
<% end %>
